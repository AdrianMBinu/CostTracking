<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Spenditure">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/totalcost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CFC4F9"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="Total: $"
        android:textSize="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Spendingslist"
            android:layout_marginBottom="50dp">
            >

        </ListView>
    </LinearLayout>
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/add"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="60dp"
        android:onClick="newIntent"
        app:backgroundTint="#CFC4F9"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/calenderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/calendericon"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="130dp"
        android:onClick="changeDate"
        app:backgroundTint="#CFC4F9"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="3"
        tools:ignore="MissingConstraints"
        android:layout_gravity="end|bottom"
        android:background="#CFC4F9"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_margin="0dp"
            android:text="Favourites"
            android:textColor="@color/black"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:elevation="0dp"
            android:onClick="toFav"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_margin="0dp"
            android:text="Fuel"
            android:textColor="@color/black"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:elevation="0dp"
            android:onClick="toFuel"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_margin="0dp"
            android:text="Spenditures"
            android:textColor="@color/black"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:elevation="0dp"
            android:onClick="toSpend"
            />
    </GridLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>